description "Beaver log agent"
author "Chef"

start on (filesystem and net-device-up)
stop on runlevel [!2345]

respawn
respawn limit 5 30

<% if node[:beaver][:supports_setuid] %>
setuid <%= @user %>
setgid <%= @group %>
<% end %>
chdir <%= @basedir %>

console output

exec <%= @cmd %> >> <%= @log %> 2>&1

emits logstash-beaver-running
